<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
    <label>Name: </label><br>

    <input type="text" name="pet[name]" id="pet_name"><br>

    <label>Choose an existing owner: </label><br>

    <%@owners.each do |owner|%>
        <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
    <%end%>
    
        <h3>New Owner</h3>
    <p>NOTE: if you assign a new owner, it will override any existing owner you have selected.</p>
    <!-- form to create a new owner -->
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>

    <input type="submit" value="Create Pet">

</form>
