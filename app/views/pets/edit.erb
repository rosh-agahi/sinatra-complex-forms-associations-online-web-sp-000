<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name: </label><br>
    <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"><br>
    <h3>Choose an existing owner: <h3><br>
    <%Owner.all.each do |owner|%>
        <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner.name == owner.name%>>
    <%end%>

    <br>

    <h3>Create New owner: </h3> <br>

    <label>Name: </label>
    <input type="text" name="owner[name]" id="owner_name"><br>

    <br>
    
    <input type="submit" value="Update Pet">

</form>